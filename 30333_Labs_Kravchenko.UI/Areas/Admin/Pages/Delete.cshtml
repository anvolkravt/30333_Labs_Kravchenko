@page
@model _30333_Labs_Kravchenko.UI.Areas.Admin.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Medication";
}
<h1>Delete Medication</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Medication</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Medication.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Medication.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Medication.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Medication.Description)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Medication.Manufacturer)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Medication.Manufacturer)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Medication.Image)</dt>
        <dd class="col-sm-10">
            <img img-action="GetAvatar" img-controller="Image" src="@Model.Medication.Image" alt="@Model.Medication.Name" style="max-width: 100px;" />
        </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Medication.Category)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Medication.Category.Name)</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Medication.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-primary ms-1">Back to List</a>
    </form>
</div>