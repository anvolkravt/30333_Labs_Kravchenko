@model _30333_Labs_Kravchenko.Domain.Models.ProductListModel<Medication>
@{
    ViewData["Title"] = "Лекарства";
    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();
    var categories = ViewData["categories"] as IEnumerable<Category>;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="m-3">Лекарства</h2>
<div class="row">
    <!-- Выбор категории -->
    <div class="row border-2">
        <ul class="nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-bs-toggle="dropdown"
                   href="#"
                   role="button"
                   aria-expanded="false">
                    @ViewData["currentCategory"]
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Product"
                           asp-route-category="@null">Все</a>
                    </li>
                    @foreach (var item in categories)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Product"
                               asp-route-category="@item.NormalizedName">
                                @item.Name
                            </a>
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </div>
    <!-- Список лекарств -->
    @if (Model != null && Model.Items.Any())
    {
        <div class="col-10">
            <div class="card-group">
                @foreach (var item in Model.Items)
                {
                    <div class="col-4 p-4">
                        <div class="card border-dark m-2">
                            <img class="card-img-top card-img-top-fixed"
                                 src="@item.Image"
                                 alt="No image available" />
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                                <h5>
                                    <span class="badge bg-secondary">
                                        @item.Manufacturer
                                    </span>
                                </h5>
                            </div>
                            <div class="card-footer text-center">
                                <a class="btn btn-outline-primary"
                                   asp-controller="Cart"
                                   asp-action="Add"
                                   asp-route-id="@item.Id"
                                   asp-route-returnUrl="@returnUrl">
                                    Добавить в корзину <i class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
<h2 class="text-warning">@ViewData["Error"]</h2>