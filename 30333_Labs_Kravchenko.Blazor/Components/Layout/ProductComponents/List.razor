@implements IDisposable
@rendermode InteractiveServer
<h3>List</h3>

@if (ProductService.Products != null && ProductService.Products.Count() != 0)
{
    <table class="table table-striped">
        <thead>
        <th>Название</th>
        <th></th>
            @foreach (var item in ProductService.Products)
            {
            <tr>
                <td>@item.Name</td>
                <td>
                    <button class="btn btn-outline-dark"
                            @onclick="@(()=>OnMedicationSelected(item.Id))">
                        Подробно
                    </button>
                </td>
            </tr>
            }
        </thead>
    </table>
}


@code {
    [CascadingParameter]
    public IProductService<Medication> ProductService { get; set; }

    [Parameter]
    public EventCallback<int> MedicationSelected { get; set; }

    protected override async Task OnInitializedAsync()
    {
        base.OnInitialized();
        ProductService.ListChanged += StateHasChanged;
    }

    public async void OnMedicationSelected(int id)
    {
        await MedicationSelected.InvokeAsync(id);
    }


    public void Dispose()
    {
        ProductService.ListChanged -= StateHasChanged;
    }
}
